<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/good_morning_img"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="538dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/loginscrn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:fontFamily="cursive"
            android:text="Login"
            android:textSize="50dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#96ffffff"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="69dp"
            android:textColorHint="#9C27B0">

            <EditText
                android:id="@+id/l_txtemail"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:drawableRight="@drawable/ic_email_white_24dp"
                android:drawablePadding="16dp"
                android:fontFamily="@font/playfair"
                android:hint="Email"
                android:textStyle="bold"
                android:textColorHighlight="@color/browser_actions_bg_grey"
                android:textColorHint="#ff0000"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColorHint="#9C27B0">

            <EditText
                android:id="@+id/l_txtpwd"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:drawableRight="@drawable/ic_lock_white_24dp"
                android:drawablePadding="16dp"
                android:fontFamily="@font/playfair"
                android:hint="Password"

                android:textColorHint="#ff0000"
                android:inputType="textEmailAddress"
                android:maxLines="1"

                android:textColor="@color/colorAccent"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp">
    <Button
        android:id="@+id/l_btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/thebomob"
        android:layout_marginLeft="100dp"
        android:textSize="9dp"
        android:text="Login" />

    <Button
        android:id="@+id/l_lnkLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/thebomob"
        android:layout_marginLeft="20dp"
        android:textSize="9dp"
        android:onClick="test"
        android:text="Register" />

</androidx.appcompat.widget.LinearLayoutCompat>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>